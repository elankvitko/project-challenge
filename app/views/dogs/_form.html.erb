<div class="text-center">
  <%= simple_form_for @dog do |f| %>
    <div class="form-inputs col-md-12">
      <div class="hold-center">
        <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
        <%= f.input :name, required: true, autofocus: true, placeholder: 'Name', label: false, input_html: { class: 'form-control' } %>
        <br>
        <%= f.input :description, as: :text, placeholder: 'Tell Us Something About Your Dog :)', label: false, input_html: { name: 'Description', class: 'form-control' } %>
        <br>
        <%= f.input :images, as: :file, label: false, input_html: { multiple: true, class: 'form-control', name: 'Images' } %>
        <br>
        <%= f.button :submit, class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if @dog.images.any? %>
          <%= image_tag @dog.images.first %>
        <% end %>
      </div>
    </div>
  </div>
</div>
